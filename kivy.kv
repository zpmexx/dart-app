<Database>:
    name: "database"
    size: root.width,root.height
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.jpg'
    GridLayout:
        cols: 1
        size_hint: .4,.4
        pos_hint: {'x': 0.3 , 'y': 0.3}
        spacing: '20dp'
        Button:
            text: "Statystyki gracza"
            background_color: (1.0, 0.0, 0.0, 1.0)
            # size_hint: 0.3, 0.3
            on_release: 
                app.root.current = "stats";root.manager.transition.direction = "left"   
        Button:
            text: "Baza danych"
            background_color: (1.0, 0.0, 0.0, 1.0)
            # size_hint: 0.3, 0.3
            on_release:app.root.current = "fulldatabase";root.manager.transition.direction = "left"
        Button:
            text: "Powrót"
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_release:app.root.current = "solo";root.manager.transition.direction = "right"

